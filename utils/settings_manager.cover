    1:     def save_midi_mappings(self, mappings):
               """FIXED: Save MIDI mappings to BOTH primary file AND settings"""
               try:
                   if not isinstance(mappings, dict):
                       logging.error("âŒ Invalid mappings format, must be a dictionary")
                       return
                       
                   logging.info(f"ðŸ’¾ SAVING {len(mappings)} MIDI mappings...")
                   
                   # PRIORITY 1: Save to primary config file (config/midi_mappings.json)
                   try:
                       os.makedirs(os.path.dirname(self.mappings_file), exist_ok=True)
                       with open(self.mappings_file, 'w', encoding='utf-8') as f:
                           json.dump(mappings, f, indent=4, ensure_ascii=False)
                       logging.info(f"âœ… PRIMARY: Saved to {self.mappings_file}")
                   except Exception as e:
                       logging.error(f"âŒ Failed to save to primary file {self.mappings_file}: {e}")
                   
                   # BACKUP: Also save to main settings
                   try:
                       self.set_setting("midi_mappings", mappings)
                       logging.info(f"âœ… BACKUP: Saved to settings file")
                   except Exception as e:
                       logging.error(f"âŒ Failed to save to settings: {e}")
                       
                   logging.info(f"âœ… MIDI mappings saved successfully")
                       
               except Exception as e:
