{
  "name": "VolumetricGlitch",
  "description": "An ultra-detailed, professional audiovisual preset that combines advanced MIDI-reactive behavior with high-fidelity generative volumetric art.",
  "author": "JungleLabStudio",
  "version": "1.0.0",
  "category": "Glitch",
  "tags": ["glitch", "volumetric", "generative", "midi-reactive", "particles"],
  "thumbnail": "VolumetricGlitch_thumb.png",
  "defaultConfig": {
    "lights": {
      "density": 0.5,
      "coreBrightness": 0.8,
      "colorPalette": "cyber"
    },
    "particles": {
      "arcDensity": 0.6,
      "trailLength": 0.3
    },
    "fluid": {
      "morphSpeed": 0.4,
      "expansion": 0.2
    },
    "midi": {
      "note": 60,
      "burstIntensity": 0.8,
      "burstDuration": 500
    }
  },
  "controls": [
    { "name": "lights.density", "type": "slider", "label": "Lights Density", "min": 0, "max": 1, "step": 0.05, "default": 0.5 },
    { "name": "lights.coreBrightness", "type": "slider", "label": "Core Brightness", "min": 0, "max": 2, "step": 0.1, "default": 0.8 },
    { "name": "lights.colorPalette", "type": "select", "label": "Color Palette", "options": ["cyber", "nebula", "forest"], "default": "cyber" },
    { "name": "particles.arcDensity", "type": "slider", "label": "Arc Density", "min": 0, "max": 1, "step": 0.05, "default": 0.6 },
    { "name": "particles.trailLength", "type": "slider", "label": "Trail Length", "min": 0, "max": 1, "step": 0.05, "default": 0.3 },
    { "name": "fluid.morphSpeed", "type": "slider", "label": "Morph Speed", "min": 0, "max": 1, "step": 0.05, "default": 0.4 },
    { "name": "fluid.expansion", "type": "slider", "label": "Expansion", "min": 0, "max": 1, "step": 0.05, "default": 0.2 },
    { "name": "midi.note", "type": "midi-note-recorder", "label": "MIDI Note" },
    { "name": "midi.burstIntensity", "type": "slider", "label": "MIDI Burst Intensity", "min": 0, "max": 2, "step": 0.1, "default": 0.8 },
    { "name": "midi.burstDuration", "type": "slider", "label": "MIDI Burst Duration (ms)", "min": 50, "max": 2000, "step": 50, "default": 500 }
  ],
  "audioMapping": {
    "low": {"description": "Controls volumetric bloom and particle bursts", "frequency": "20-250 Hz"},
    "mid": {"description": "Controls fluid morphing and distortion waves", "frequency": "250-4000 Hz"},
    "high": {"description": "Controls color modulation and trail brightness", "frequency": "4000+ Hz"}
  },
  "performance": {"complexity": "high", "recommendedFPS": 60, "gpuIntensive": true}
}
