{
  "name": "OrganicAsciiGlitch",
  "description": "A professional audiovisual glitch visualizer combining real nature footage with advanced generative effects.",
  "author": "JungleLabStudio",
  "version": "1.0.0",
  "category": "Glitch",
  "tags": ["glitch", "ascii", "generative", "midi-reactive", "video"],
  "usesVideoSource": true,
  "thumbnail": "OrganicAsciiGlitch_thumb.png",
  "defaultConfig": {
    "video": {
      "source": "Nature_Fox.mp4",
      "brightness": 1.0,
      "contrast": 1.0
    },
    "ascii": {
      "density": 0.8,
      "characterSet": "full",
      "threshold": 0.5
    },
    "glitch": {
      "intensity": 0.5,
      "pixelSortingAmount": 0.2,
      "rgbShift": 0.01,
      "frameTearProbability": 0.1
    },
    "particles": {
      "density": 0.3,
      "color": "#FFFFFF",
      "spread": 0.5
    },
    "midi": {
      "note": 60,
      "burstIntensity": 0.8,
      "burstDuration": 500
    }
  },
  "controls": [
    { "name": "video.source", "type": "select", "label": "Video Source", "options": ["Nature_Fox.mp4", "Bird_Flying.mp4"], "default": "Nature_Fox.mp4"},
    { "name": "video.brightness", "type": "slider", "label": "Video Brightness", "min": 0, "max": 2, "step": 0.1, "default": 1.0 },
    { "name": "video.contrast", "type": "slider", "label": "Video Contrast", "min": 0, "max": 2, "step": 0.1, "default": 1.0 },
    { "name": "ascii.density", "type": "slider", "label": "ASCII Density", "min": 0.1, "max": 2, "step": 0.1, "default": 0.8 },
    { "name": "ascii.characterSet", "type": "select", "label": "ASCII Character Set", "options": ["full", "minimal", "block", "symbols"], "default": "full" },
    { "name": "ascii.threshold", "type": "slider", "label": "ASCII Threshold", "min": 0, "max": 1, "step": 0.1, "default": 0.5 },
    { "name": "glitch.intensity", "type": "slider", "label": "Glitch Intensity", "min": 0, "max": 1, "step": 0.05, "default": 0.5 },
    { "name": "glitch.pixelSortingAmount", "type": "slider", "label": "Pixel Sorting Amount", "min": 0, "max": 1, "step": 0.05, "default": 0.2 },
    { "name": "glitch.rgbShift", "type": "slider", "label": "RGB Shift", "min": 0, "max": 0.1, "step": 0.005, "default": 0.01 },
    { "name": "glitch.frameTearProbability", "type": "slider", "label": "Frame Tear Probability", "min": 0, "max": 1, "step": 0.05, "default": 0.1 },
    { "name": "particles.density", "type": "slider", "label": "Particle Density", "min": 0, "max": 1, "step": 0.05, "default": 0.3 },
    { "name": "particles.color", "type": "color", "label": "Particle Color", "default": "#FFFFFF" },
    { "name": "particles.spread", "type": "slider", "label": "Particle Spread", "min": 0, "max": 1, "step": 0.05, "default": 0.5 },
    { "name": "midi.note", "type": "midi-note-recorder", "label": "MIDI Note", "default": 60 },
    { "name": "midi.burstIntensity", "type": "slider", "label": "MIDI Burst Intensity", "min": 0, "max": 2, "step": 0.1, "default": 0.8 },
    { "name": "midi.burstDuration", "type": "slider", "label": "MIDI Burst Duration (ms)", "min": 50, "max": 2000, "step": 50, "default": 500 }
  ],
  "audioMapping": {
    "low": {
      "description": "Controls glitch and particle intensity",
      "frequency": "20-250 Hz",
      "effect": "glitch/payload"
    },
    "mid": {
      "description": "Controls ASCII density and distortion",
      "frequency": "250-4000 Hz",
      "effect": "ascii/density"
    },
    "high": {
      "description": "Controls particle spread and RGB shift",
      "frequency": "4000+ Hz",
      "effect": "particles/spread"
    }
  },
  "performance": {"complexity": "high", "recommendedFPS": 60, "gpuIntensive": true}
}
